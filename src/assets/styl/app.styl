@import "./reset.styl";
@import "./variable.styl";
html,body
    width:100%;
    height:100%;
    #root
        height:100%;
        .App
            height:100%;
            padding-top:1rem;
            padding-bottom:1rem;
            position: relative
            header.app-header
                width:100%;
                background: linear-gradient(to right, $gOne1, $gOne2,$gOne3); /* 标准的语法 */
                position: fixed
                top: 0;
                left: 0;
                .app-one
                    width:100%;
                    display: flex;
                    height:1rem;
                    font-size: 0;
                    .menu-button,.menu-search
                        flex:0 0 1rem
                        padding:.2rem;
                        cursor pointer
                        .label-checkbox
                            height:100%;
                            label
                                width:100%;
                                height:100%;
                                display: inline-block;
                            img
                                width:100%;
                                height:100%;
                    // .menu-button
                        // background: url('../img/menu.svg');
                    .menu-one-list
                        flex:1;
                        display: flex;
                        padding:0 .5rem
                        line-height: 1rem
                        div
                            flex:1
                            text-align: center
                            a   
                                display: inline-block
                                width:100%;
                                font-size:.35rem;
                                color:$fontColor4
            .Main
                width:100%;
                height:100%;
                overflow:hidden;
                section
                    width:100%;
                    height: 100%;
                    overflow-y: auto;
                    -webkit-overflow-scrolling: touch
                    .leveTwoRouter
                        width:100%;
                        height:.9rem;
                        nav 
                            width:100%;
                            height:100%;
                            background: linear-gradient(to right, $gTwo1, $gTwo2,$gTwo3); /* 标准的语法 */
                            font-size: 0;
                            display: flex;
                            div
                                flex:1;
                                text-align: center;
                                line-height: .9rem;
                                a
                                    font-size:.3rem
                                    width:100%;
                                    display: inline-block
                                    color:$fontColor4
                                    position relative;
                                    &:after
                                        content:'';
                                        width:0rem;
                                        height:.09rem;
                                        background: $fontColor;
                                        display: inline-block;
                                        position: absolute;
                                        bottom:.01rem;
                                        left 50%;
                                        margin-left:-0.6rem;
                                        transition:all 0.2s;

.activeClassNameOne
    color:$fontColor3!important;
.activeClassNameTwo
    color:$fontColor!important;
    &:after
        width:1.2rem!important;
        