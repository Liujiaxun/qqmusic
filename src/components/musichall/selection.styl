@import '../../assets/styl/variable.styl';
.banner-swiper
    width:100%;
    height:3rem;
    overflow hidden
    .banner-center
        width:100%;
        height:100%;
        .swiper-wrapper
            width:100%;
            height:100%;
            .swiper-slide
                width:100%;
                height:100%;
                img 
                    width:100%;
                    height:100%;
.menu-box
    width:95%;
    height:1.6rem;
    background: #fff;
    margin:0 auto
    position relative
    top:-0.1rem;
    z-index:2
    box-shadow: 3px 4px 3px #f8f8f8, -3px 3px 3px #f8f8f8;
    display: flex;
    padding:.3rem;
    .menu-item
        flex:1;
        height 100%
        text-align: center;
        padding:0 .2rem
        .menu-center
            width:.66rem;
            height:.66rem;
            margin:0 auto;
            line-height: 0
            img 
                width:100%
                height:100%
        p   
            margin-top:.1rem
            font-size:.3rem
            color:$fontColor2


